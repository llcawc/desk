{
  "name": "desk",
  "version": "0.0.1",
  "date": "23.12.22",
  "license": "ISC",
  "author": "pasmurno by llcawc",
  "homepage": "https://github.com/llcawc",
  "description": "tailwind starter template by pasmurno",
  "scripts": {
    "arch": "rsync -aRv --delete --exclude=node_modules . /mnt/d/Webcode/github/desk/",
    "clean": "rm -rf dist",
    "copy": "copyfiles -u1 'src/assets/fonts/**/*.*' dist",
    "htm": "copyfiles -u1 'src/**/*.html' dist",
    "css": "postcss src/assets/styles/*.css -d dist/assets/css --ext 'min.css'",
    "images": "imagemin src/assets/images --out-dir=dist/assets/images",
    "dev:js": "rollup -c -w --silent",
    "dev:img": "nodemon --ext jpg,png,svg -w './src' -x 'imagemin src/assets/images --out-dir=dist/assets/images'",
    "dev:watch": "nodemon --ext html,css -w './src' -x 'run-s htm css' --ignore './dist'",
    "dev": "npm-run-all clean copy -p dev:* serve",
    "serve": "browser-sync start --config bs-config.js",
    "build": "run-s clean copy images build:* arch && echo 'CSS temporary file cleaned, production completed and archived'",
    "build:js": "rollup -c --environment BUILD:production",
    "build:min": "terser dist/assets/js/main.min.js --compress --output dist/assets/js/main.min.js",
    "build:css": "postcss src/assets/styles/*.css -d dist/assets/css --ext 'min.css' --env 'production'",
    "build:htm": "html-minifier-terser --collapse-whitespace --remove-comments --input-dir src --file-ext html --output-dir dist"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "autoprefixer": "^10.4.16",
    "browser-sync": "^2.29.3",
    "copyfiles": "^2.4.1",
    "html-minifier-terser": "^7.2.0",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-csso": "^6.0.1",
    "postcss-import": "^15.1.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "rollup": "^4.9.1",
    "tailwindcss": "^3.4.0",
    "terser": "^5.26.0"
  }
}
