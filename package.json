{
  "name": "desk",
  "version": "0.0.2",
  "date": "2022.07.28",
  "license": "ISC",
  "author": "pasmurno by llcawc",
  "homepage": "https://github.com/llcawc",
  "description": "tailwind starter template by pasmurno",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/llcawc/desk.git"
  },
  "keywords": [
    "desk",
    "tailwind",
    "starter",
    "template"
  ],
  "main": "",
  "type": "module",
  "scripts": {
    "cleandist": "rimraf dist",
    "script": "rollup -c -w",
    "css": "postcss src/assets/styles/*.postcss -d dist/assets/css --ext 'min.css'",
    "htm": "copyfiles -u1 'src/**/*.html' dist",
    "watch": "nodemon --ext html,postcss -w './src' -x 'npm-run-all css htm' --ignore './dist'",
    "img": "nodemon --ext jpg,png,svg -w './src' -x 'imagemin src/assets/images --out-dir=dist/assets/images'",
    "dev": "npm-run-all cleandist copy htm css -p watch script img serve",
    "serve": "browser-sync start --config bs-config.cjs",
    "copy": "copyfiles -u1 'src/assets/fonts/**/*.*' dist",
    "images": "imagemin src/assets/images --out-dir=dist/assets/images",
    "build": "npm-run-all cleandist copy images build:* && echo 'CSS temporary file cleaned, production completed'",
    "build:js": "rollup -c --environment BUILD:production",
    "build:css": "postcss src/assets/styles/*.postcss -d dist/assets/css --ext 'min.css' --env 'production'",
    "build:htm": "html-minifier-terser --collapse-whitespace --remove-comments --input-dir src --file-ext html --output-dir dist"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "autoprefixer": "^10.4.7",
    "browser-sync": "^2.27.10",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.12",
    "html-minifier-terser": "^7.0.0-beta.0",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^14.1.0",
    "postcss-scss": "^4.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.2",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.1.6"
  }
}
