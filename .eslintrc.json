{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:tailwindcss/recommended"
  ],
  "overrides": [
    {
      "files": ["*.html", "*.htm", "*.njk", ".css"],
      "parser": "@angular-eslint/template-parser"
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "tailwindcss/no-custom-classname": [1, {
      "whitelist": ["year", "bi", "bi-house", "waves"]
    }]
  }
}
